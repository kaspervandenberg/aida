	<profiles>
		<profile>
			<id>deploy_on_Vocab</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.6</version>
						<executions>
							<execution>
								<id>install into Axis</id>
								<phase>install</phase>
								<goals>
									<goal>copy</goal>
									<goal>copy-dependencies</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>${project.name}</artifactId>
											<version>${project.version}</version>
											<type>jar</type>
											<overWrite>true</overWrite>
										</artifactItem>
									</artifactItems>
									<outputDirectory>${axis.home}/WEB-INF/lib</outputDirectory>
								</configuration>
							</execution>	
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

