<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.vle.aid</groupId>
  <artifactId>indexer</artifactId>
  <version>0.70</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
			
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
				<version>2.13</version>
        <configuration>
          <skip>false</skip>
					<workingDirectory>${java.io.tmpdir}</workingDirectory>
        </configuration>
      </plugin>
    </plugins>

		<testResources>
			<testResource>
				<directory>${project.build.testSourceDirectory}</directory>
				<targetPath>${java.io.tmpdir}</targetPath>
			</testResource>
		</testResources>
  </build>

  <dependencies>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
		</dependency>
		
		<dependency>
			<groupId>javax.xml.parsers</groupId>
			<artifactId>jaxp-api</artifactId>
			<version>1.4.5</version>
			<!-- used in indexer.Indexer, and 
						config.org.aid.impl.runtime.MarshallerImpl -->
		</dependency>
		
		<dependency>
			<groupId>axis</groupId>
			<artifactId>axis</artifactId>
			<version>1.4</version>
			<!-- provides org.apache.axis. -->
			<!-- used in Iindexer.Indexer -->
		</dependency>

		<dependency>
			<groupId>org.apache.axis</groupId>
			<artifactId>axis-jaxrpc</artifactId>
			<version>1.4</version>
			<!-- provides javax.xml.rpc -->
			<!-- used in indexer.Indexer -->
		</dependency>
		
		<dependency>
      <groupId>org.apache.lucene</groupId>
      <artifactId>lucene-core</artifactId>
      <version>2.1.0</version>
			<!-- used in indexer.* -->
    </dependency>
    
		<dependency>
      <groupId>pdfbox</groupId>
      <artifactId>pdfbox</artifactId>
			<version>0.7.3</version>
			<!-- provides org.pdfbox -->
			<!-- newer versions available via org.apache.pdfbox -->
			<!-- perhaps replace it for Tika -->
			<!-- used in indexer.PdfHandler, and indexer.DocConverter -->
    </dependency>
    
		<dependency>
      <groupId>org.textmining</groupId>
      <artifactId>tm-extractors</artifactId>
      <version>0.4</version>
			<!-- used in indexer.MswordHandler -->
    </dependency>
    
		<dependency> 
      <groupId>org.dspace</groupId>
      <artifactId>jargon</artifactId>
      <version>1.4.25</version>
			<!-- provides edu.sdsc.grid.io.{srb,local} -->
			<!-- used in indexer.SRBhandler -->
    </dependency>
    
		<dependency>
			<groupId>org.jglobus</groupId>
			<artifactId>JGlobus-Core</artifactId>
			<version>2.0.4</version>
			<!-- provides org.globus -->
			<!-- used in nl.uva.science.wsdtf.StreamClient, 
					nl.uva.science.wsdtf.utilities.*, and 
					nl.uva.science.wsdtf.protocols.* -->
		</dependency>

  </dependencies>

	<profiles>
		<profile>
			<id>deploy_on_Vocab</id>
			<properties>
				<axis.home>${env.CATALINA_BASE}/webapps/axis</axis.home>
				<axis.lib>${axis.home}/WEB-INF/lib</axis.lib>
				<axis.manager.port>80</axis.manager.port>
				<axis.host>localhost</axis.host>
				<axis.admin.servlet>/axis/services/AdminService</axis.admin.servlet>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.6</version>
						<executions>
							<execution>
								<id>install into Axis</id>
								<phase>install</phase>
								<goals>
									<goal>copy</goal>
									<goal>copy-dependencies</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>${project.name}</artifactId>
											<version>${project.version}</version>
											<type>jar</type>
											<overWrite>true</overWrite>
										</artifactItem>
									</artifactItems>
									<outputDirectory>${axis.lib}</outputDirectory>
								</configuration>
							</execution>	
						</executions>
					</plugin>

					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<phase>install</phase>
							<configuration>
								<tasks>
									<axis-admin port="${axis.manager.port}" hostname="${axis.host}"
											failonerror="true" servletpath="${axis.admin.servlet}"
											debug="true" xmlfile="${project.build.scriptSourceDirectory}/deploy.wsdd" />
								</tasks>
							</configuration>
						</executions>
					</plugin>
		
<?ignore "Not working; try antrun plugin instead"		
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>axistools-maven-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<id>deploy webservice</id>
								<phase>install</phase>
								<goals>
									<goal>admin</goal>
								</goals>
								<configuration>
									<inputFiles>
										<inputFile>${basedir}/main/webapp/WEB-INF/services/deploy.wsdd</inputFile>
									</inputFiles>
								</configuration>
							</execution>
						</executions>
					</plugin>
?>
				</plugins>
			</build>
		</profile>
	</profiles>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>

