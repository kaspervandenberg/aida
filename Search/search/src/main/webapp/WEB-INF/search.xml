<Context path="/search" allowLinking="true">
  <Logger className="org.apache.catalina.logger.FileLogger" prefix="search." suffix=".log" timestamp="true"/>
    <Valve className="org.apache.catalina.valves.AccessLogValve"
	    prefix="search_access_log." suffix=".txt"
		pattern="%t %a %m %U%q %{query}s %T"/>
    <Valve className="org.apache.catalina.valves.AccessLogValve"
	    prefix="search_query_log." suffix=".txt"
		pattern="%t %a %U %{query}s"/>
									   
</Context>
